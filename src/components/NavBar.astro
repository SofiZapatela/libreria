---
interface NavItem {
  title: string;
  href: string;
}

interface Props {
  siteTitle?: string;
  navItems?: NavItem[];
}

const {
  siteTitle = 'libreria',
  navItems = [
    { title: 'INICIO', href: '/' },
    { title: 'LIBROS', href: '/tienda' },
    { title: 'CARRITO', href: '/carrito' },
  ] as NavItem[],
} = Astro.props as Props;
---

<header class="sticky top-0 z-50 bg-[#fbfbfb] shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-end-safe items-center h-16 w-full relative">

      <!-- NAV DESKTOP -->
      <nav class="hidden lg:flex lg:space-x-20">
        {navItems.map((item: NavItem) => (
          <a
            href={item.href}
            class="text-black hover:text-blue-200 transition duration-150 ease-in-out font-medium text-sm font-oswald uppercase"
          >
            {item.title}
          </a>
        ))}
      </nav>

      <!-- BOTÓN MOBILE -->
      <div class="lg:hidden absolute right-0">
        <button id="astro-menu-btn" aria-label="Abrir menú" aria-expanded="false" class="p-2 text-white">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
            viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

    </div>

    <!-- MENÚ MOBILE -->
    <div id="astro-mobile-menu" class="lg:hidden hidden px-4 pt-2 pb-4 space-y-2 text-white text-right">
      {navItems.map((item: NavItem) => (
        <a
          href={item.href}
          class="block px-3 py-2 text-base font-medium uppercase hover:bg-white/10 rounded"
        >
          {item.title}
        </a>
      ))}
    </div>
  </div>

  
  <!-- Script toggle -->
  <script>
    const btn = document.getElementById('astro-menu-btn');
    const menu = document.getElementById('astro-mobile-menu');

    if (btn && menu) {
      btn.addEventListener('click', () => {
        const expanded = btn.getAttribute('aria-expanded') === 'true';
        btn.setAttribute('aria-expanded', String(!expanded));
        menu.classList.toggle('hidden');
      });
    }
  </script>
</header>